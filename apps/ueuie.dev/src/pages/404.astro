---
import Logo from '~/components/Logo.astro';
import Basic from '~/components/layouts/Basic.astro';
---

<style lang="scss">
    .container {
        width: 100%;
        height: 100%;

        padding: 4rem;

        display: flex;
        align-items: center;
        justify-content: center;
    }

    h1 {
        font-size: 8rem;
        color: var(--color-primary);
    }
</style>

<Basic>
    <Logo teletype={{ lines: ['404', 'NOT', 'FOUND'] }} slot="logo" />
    <div class="container">
        <h1 class="text-4xl font-bold">404. Not Found</h1>
    </div>
</Basic>

<script>
    import { animate } from '~/components/Logo.anim';

    animate.line(0, '404', 15);
    animate.line(1, 'NOT', 25);
    animate.line(2, 'FOUND', 35);
</script>
