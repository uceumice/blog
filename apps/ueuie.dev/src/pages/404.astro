---
import Template from '~/components/TemplateNotFound.astro';

import Logo from '~/components/Logo.astro';
import Type from '~/components/Type.astro';
import Line from '~/components/Line.astro';
---

<Template title="Not Found">
    <Logo slot="logo">
        <Type>
            <Line>NOT</Line>
            <Line>...</Line>
            <Line>FOUND</Line>
        </Type>
    </Logo>
    <Fragment slot="message">Not ... Found</Fragment>
</Template>

<script>
    import { animate } from '~/components/Logo.anim';

    animate.line(0, 'NOT', 15);
    animate.line(1, '...', 25);
    animate.line(2, 'FOUND', 35);
</script>
