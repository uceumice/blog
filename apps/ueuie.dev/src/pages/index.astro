---
import Template from '~/components/TemplateWellcome.astro';

import Logo from '~/components/Logo.astro';
import Type from '~/components/Type.astro';
import Line from '~/components/Line.astro';

import Designing from '~/components/Designing.astro';
import Securing from '~/components/Securing.astro';
import Improving from '~/components/Improving.astro';
---

<Template title="[B]L0G - UEUIE:DEV">
    <Logo slot="logo">
        <Type>
            <Line>WELLCOME</Line>
            <Line>TO</Line>
            <Line>[B]LOG</Line>
        </Type>
    </Logo>
    <Fragment slot="about">
        cyber security student, software developer and design enthusiast. right
        now i am awaiting placement for the winter semester at the university of
        bonn. my passion lies in <Designing />, <Securing /> and <Improving />.
    </Fragment>
</Template>

<script>
    import { animate } from '~/components/Logo.anim';

    animate.line(0, 'WELCOME', 15);
    animate.line(1, 'TO', 35);
    animate.line(2, '[B]LOG', 15);
</script>
