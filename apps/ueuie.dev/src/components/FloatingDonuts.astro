---
import Donut from './Donut.astro';
---

<style lang="scss">
    .container {
        position: relative;
        z-index: -1;
        width: 100vw;
        height: 100vh;

        display: block;

        pre {
            z-index: -2;
            scale: 2.5;
        }

        :nth-child(0) {
            left: 2rem;
            bottom: -2rem;
            rotate: -116.22deg;
        }
        :nth-child(1) {
            left: 40%;
            top: -20%;
            rotate: 180deg;
        }
        :nth-child(2) {
            right: -5rem;
            bottom: 4rem;
            rotate: 130.94deg;
        }
    }

    .backdrop {
        position: fixed;
        top: 0;
        left: 0;
        z-index: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.05);
        backdrop-filter: blur(10px);
    }

    @media screen and (max-width: 768px) {
        .backdrop {
            backdrop-filter: none;
            background-color: rgba(0, 0, 0, 0.8);
        }

        .container {
            pre:nth-child(2) {
                right: -5rem;
                bottom: 20rem;
                rotate: 130.94deg;
            }
        }
    }
</style>

<div class="container">
    <Donut />
    <Donut />
    <Donut />
    <div class="backdrop"></div>
</div>
