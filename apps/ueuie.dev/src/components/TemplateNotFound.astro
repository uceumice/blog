---
import Layout from '~/components/LayoutBase.astro';

type Props = { title: string };
const { title } = Astro.props;
---

<style lang="scss">
    .container {
        width: 100%;
        height: 100%;

        padding: 4rem;

        display: flex;
        align-items: center;
        justify-content: center;
    }

    h1 {
        font-size: 8rem;
        color: var(--color-primary);
    }
</style>

<Layout title={title}>
    <slot name="logo" slot="header" />
    <div class="container">
        <h1 class="text-4xl font-bold">
            <slot name="message" />
        </h1>
    </div>
</Layout>
